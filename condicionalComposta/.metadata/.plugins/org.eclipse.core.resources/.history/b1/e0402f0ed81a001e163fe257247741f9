package switchCase;

public class SistemaMedicacao {
	public static void main(String[] args) {
		String sigla = "DM";
		
		switch(sigla) {
		case "P":{
			System.out.println("PEQUENO");
			break;
		}
		case "M": {
			System.out.println("MEDIO");
			break;
		}
		case "G":{
			System.out.println("GRANDE");
			break;
		}
		default:
			System.out.println("INDEFINIDO");
		}
	}
}
